<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailPostActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/detail_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BACK"
                android:backgroundTint="@color/orange"/>

            <ImageView
                android:id="@+id/detail_photo_card"
                android:paddingVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <TextView
                android:id="@+id/detail_play_music"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="60dp"
                android:textColor="@color/orange"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/detail_title"
                android:autoLink="all"
                android:clickable="true"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_play_music"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/detail_description"
                android:autoLink="all"
                android:clickable="true"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_play_music"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/detail_link"
                android:autoLink="web"
                android:linksClickable="false"
                android:clickable="true"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_description"
                android:textSize="20sp" />

            <Button
                android:id="@+id/detail_edit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:text="EDIT POST" />
            <Button
                android:id="@+id/detail_delete_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DELETE POST" />


        </LinearLayout>


    </ScrollView>

</LinearLayout>