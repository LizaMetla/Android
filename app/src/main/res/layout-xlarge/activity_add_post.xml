<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <Button
                android:id="@+id/add_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:text="BACK" />

            <ImageView
                android:id="@+id/person_photo_new_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="400dp"
                android:minHeight="200dp"

                app:srcCompat="@android:drawable/ic_menu_gallery" />


            <!--        <TextView-->
            <!--            android:id="@+id/person_name_new_card"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_alignParentTop="true"-->
            <!--            android:layout_toRightOf="@+id/person_photo_new_card"-->
            <!--            android:textColor="@color/colorPrimary"-->
            <!--            android:textSize="30sp" />-->

            <TextView
                android:id="@+id/textViewMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="onPickAudio"
                android:text="Add Music"
                android:textSize="44sp" />

            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:hint="Title" />

            <EditText
                android:id="@+id/editDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:hint="Description" />

            <EditText
                android:id="@+id/linkTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:hint="Link" />

            <Button
                android:id="@+id/post_save_btn_id"
                android:layout_width="222dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:background="@color/orange"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="onSaveCard"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Add card to list" />


        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>